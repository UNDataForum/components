{
  "name": "@undataforum/components",
  "description": "React components for UN World Data Forum websites.",
  "version": "0.27.0",
  "author": {
    "name": "Thilo Maier",
    "email": "maier@un.org"
  },
  "homepage": "https://components.undataforum.org",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/undataforum/components.git",
  "keywords": [
    "react",
    "components",
    "styled-components",
    "styled-system"
  ],
  "scripts": {
    "babel": "rm -rf ./dist && babel ./src -d ./dist",
    "clean": "rm -rf ./node_modules",
    "deploy": "npm run build &&  gh-pages -d public -m 'Deploy to GitHub Pages'",
    "lint": "eslint . --ignore-path .gitignore --fix",
    "format": "pretty-quick",
    "prepublishOnly": "npm run babel"
  },
  "lint-staged": {
    "*.js": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "dependencies": {
    "prism-react-renderer": "^0.1.6",
    "prop-types": "^15.7.2",
    "react-helmet": "^5.2.0",
    "rebass": "^3.0.1",
    "styled-system": "^4.0.4"
  },
  "peerDependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "babel-plugin-styled-components": "^1.10.0",
    "eslint": "^5.16.0",
    "eslint-plugin-shopify": "^28.0.0",
    "gh-pages": "^2.0.1",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "styled-components": "^4.2.0"
  }
}
