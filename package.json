{
  "name": "@undataforum/components",
  "description": "React components for UN World Data Forum websites.",
  "version": "0.23.0",
  "author": {
    "name": "Thilo Maier",
    "email": "maier@un.org"
  },
  "homepage": "https://components.undataforum.org",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "gatsby develop",
    "build": "gatsby build",
    "babel": "rm -rf ./dist && babel ./src -d ./dist",
    "deploy": "npm run build &&  gh-pages -d public -m 'Deploy to GitHub Pages'",
    "format": "pretty-quick",
    "inspect": "node --inspect-brk node_modules/.bin/gatsby develop",
    "lint": "eslint --ext .jsx,.js --ignore-path .gitignore .",
    "prepublishOnly": "npm run babel",
    "upgrade-interactive": "npm-check --update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/undataforum/components.git"
  },
  "keywords": [
    "react",
    "components",
    "styled-components",
    "styled-system"
  ],
  "dependencies": {
    "polished": "^3.0.0",
    "prism-react-renderer": "^0.1.5",
    "prop-types": "^15.7.2",
    "react-helmet": "^5.2.0",
    "rebass": "^3.0.1",
    "styled-components": "^4.1.3",
    "styled-system": "^3.1.11"
  },
  "peerDependencies": {
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@mdotasia/eslint-config": "^0.6.0",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-preset-gatsby": "^0.1.8",
    "eslint": "^5.14.1",
    "gatsby": "^2.1.17",
    "gatsby-theme-undataforum": "^0.1.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.0.1",
    "lint-staged": "^8.1.4",
    "npm-check": "^5.9.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.6.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-test-renderer": "^16.8.3"
  }
}
