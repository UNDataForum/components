{
  "name": "@undataforum/components",
  "description": "React components for undataforum.org.",
  "version": "0.20.0",
  "author": {
    "name": "Thilo Maier",
    "email": "maier@un.org"
  },
  "homepage": "https://components.undataforum.org",
  "license": "MIT",
  "keywords": [
    "react",
    "components",
    "styled-components",
    "styled-system"
  ],
  "main": "index.js",
  "files": [
    "src/components"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  },
  "scripts": {
    "start": "gatsby develop",
    "build": "gatsby build",
    "deploy": "npm run build &&  gh-pages -d public -m 'Deploy to GitHub Pages'",
    "format": "pretty-quick",
    "inspect": "node --inspect-brk node_modules/.bin/gatsby develop",
    "lint": "eslint --ext .jsx,.js --ignore-path .gitignore ."
  },
  "dependencies": {
    "polished": "^2.0.2",
    "prop-types": "^15.6.2",
    "react-helmet": "^5.2.0",
    "rebass": "^3.0.0-9",
    "styled-components": "^4.0.0-beta.8-unpure",
    "styled-system": "^3.1.11"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@mdotasia/eslint-config": "^0.5.0",
    "@mdx-js/mdx": "^0.15.0",
    "@mdx-js/tag": "^0.15.0",
    "eslint": "^5.3.0",
    "gatsby": "^2.0.75",
    "gatsby-mdx": "^0.2.0",
    "gatsby-source-filesystem": "^2.0.12",
    "gh-pages": "^2.0.1",
    "husky": "^1.0.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.13.6",
    "pretty-quick": "^1.6.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-test-renderer": "^16.3.2"
  }
}
