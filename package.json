{
  "private": true,
  "scripts": {
    "start": "yarn workspace @undataforum/components start",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "2.1.2",
    "eslint": "6.5.1",
    "eslint-plugin-shopify": "30.0.1",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "now": "16.3.1",
    "prettier": "1.18.2",
    "pretty-quick": "2.0.0"
  }
}
