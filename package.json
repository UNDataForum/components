{
  "name": "@undataforum/components",
  "description": "React components for undataforum.org.",
  "version": "0.16.0",
  "author": {
    "name": "Thilo Maier",
    "email": "maier@un.org"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "components",
    "styled-components",
    "styled-system"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "scripts": {
    "start": "start-storybook -p 9009 -c config/storybook",
    "build": "rimraf ./dist && babel ./src -d ./dist --ignore test.js,stories.jsx,profiles.js",
    "build-storybook": "rimraf ./storybook-static && build-storybook -s ./public -c config/storybook",
    "deploy": "npm run build-storybook &&  gh-pages -d storybook-static -m 'Deploy to GitHub Pages'",
    "format": "pretty-quick",
    "inspect": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint --ext .jsx,.js --ignore-path .gitignore .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "polished": "^2.0.2",
    "prop-types": "^15.6.2",
    "react-helmet": "^5.2.0",
    "rebass": "^3.0.0-8",
    "styled-components": "^4.0.0-beta.8-unpure",
    "styled-system": "^3.0.1"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@mdotasia/eslint-config": "^0.5.0",
    "@storybook/addon-knobs": "^3.4.11",
    "@storybook/addon-options": "^3.4.8",
    "@storybook/addons": "^3.4.8",
    "@storybook/react": "^3.4.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "eslint": "^5.3.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.0.1",
    "lint-staged": "^7.2.2",
    "prettier": "^1.13.6",
    "pretty-quick": "^1.6.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-test-renderer": "^16.3.2",
    "rimraf": "^2.6.2",
    "storybook-addon-jsx": "^5.4.0"
  }
}
