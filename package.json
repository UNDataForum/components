{
  "private": true,
  "scripts": {
    "start": "yarn workspace docs run start",
    "prepare": "yarn workspaces run prepare",
    "lint": "yarn run lint:code && yarn run lint:other",
    "lint:code": "eslint . --cache --ext .js,.jsx --ignore-path .gitignore",
    "lint:other": "yarn run prettier --check",
    "prettier": "prettier \"**/*.{md,css,yaml,yml}\"",
    "format": "yarn run format:code && yarn run format:other",
    "format:code": "yarn run lint:code --fix",
    "format:other": "yarn run prettier --write",
    "release": "yarn changeset publish && git push --follow-tags && yarn run deploy:prod",
    "deploy": "now --confirm --token $NOW_TOKEN",
    "deploy:prod": "now --confirm --prod --token $NOW_TOKEN",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/preset-env": "7.8.4",
    "@babel/preset-react": "7.8.3",
    "@changesets/changelog-github": "0.2.1",
    "@changesets/cli": "2.5.2",
    "eslint": "6.8.0",
    "eslint-plugin-shopify": "35.0.0",
    "husky": "4.2.3",
    "lint-staged": "10.0.7",
    "microbundle": "0.11.0",
    "now": "17.0.4",
    "prettier": "1.19.1"
  }
}
