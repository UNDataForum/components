{
  "name": "@undataforum/components",
  "description": "React components for undataforum.org.",
  "version": "0.18.0",
  "author": {
    "name": "Thilo Maier",
    "email": "maier@un.org"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "components",
    "styled-components",
    "styled-system"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  },
  "scripts": {
    "start": "start-storybook -p 9009 -s ./public -c config/storybook",
    "build": "rm -rf ./dist && babel ./src -d ./dist --ignore test.js,stories.jsx,profiles.js",
    "build-storybook": "rm -rf ./storybook-static && build-storybook -s ./public -c config/storybook",
    "deploy": "npm run build-storybook &&  gh-pages -d storybook-static -m 'Deploy to GitHub Pages'",
    "format": "pretty-quick",
    "inspect": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint --ext .jsx,.js --ignore-path .gitignore .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "polished": "^2.0.2",
    "prop-types": "^15.6.2",
    "react-helmet": "^5.2.0",
    "rebass": "^3.0.0-9",
    "styled-components": "^4.0.0-beta.8-unpure",
    "styled-system": "^3.0.1"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@mdotasia/eslint-config": "^0.5.0",
    "@storybook/addon-knobs": "^4.0.0",
    "@storybook/addon-options": "^4.0.0",
    "@storybook/addons": "^4.0.0",
    "@storybook/react": "^4.0.0",
    "babel-loader": "^8.0.4",
    "eslint": "^5.3.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.0.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.13.6",
    "pretty-quick": "^1.6.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-test-renderer": "^16.3.2"
  }
}
