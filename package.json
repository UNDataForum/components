{
  "name": "@undataforum/components",
  "description": "React components for undataforum.org.",
  "version": "0.10.0",
  "author": {
    "name": "Thilo Maier",
    "email": "maier@un.org"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "components",
    "styled-components",
    "styled-system"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "start-storybook -p 9009",
    "build": "rimraf ./dist && babel ./src -d ./dist --ignore test.js,stories.jsx,profiles.js",
    "build-storybook": "rimraf ./storybook-static && build-storybook -s ./public",
    "deploy": "npm run build-storybook && gh-pages -d ./storybook-static",
    "format": "pretty-quick",
    "inspect": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint --ext .jsx,.js --ignore-path .gitignore .",
    "precommit": "pretty-quick --staged",
    "prepublishOnly": "npm run deploy && npm run build",
    "test": "jest --watch"
  },
  "dependencies": {
    "polished": "^1.9.3",
    "prop-types": "^15.6.2",
    "react-helmet": "^5.2.0",
    "styled-components": "^3.2.6",
    "styled-system": "^3.0.1"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.8",
    "@storybook/addon-console": "^1.0.4",
    "@storybook/addon-options": "^3.4.8",
    "@storybook/addons": "^3.4.8",
    "@storybook/react": "^3.4.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "eslint": "^4.1.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "jest-image-snapshot": "^2.4.3",
    "jest-puppeteer": "^3.2.1",
    "prettier": "^1.13.6",
    "pretty-quick": "^1.6.0",
    "puppeteer": "^1.5.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.3.2",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.js"
  }
}
