{
  "private": true,
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run lint"
    }
  },
  "scripts": {
    "dev": "yarn workspace docs run dev",
    "prepare": "yarn workspaces run prepare",
    "version": "changeset version && yarn run format",
    "release": "changeset publish",
    "prettier": "prettier . --ignore-path .gitignore",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:prettier": "yarn run prettier --check",
    "format": "run-s format:*",
    "format:eslint": "yarn run lint:eslint --fix",
    "format:prettier": "yarn run prettier --write",
    "clean": "yarn workspaces run clean",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge"
  },
  "devDependencies": {
    "@babel/cli": "7.10.1",
    "@babel/core": "7.10.2",
    "@babel/preset-env": "7.10.2",
    "@babel/preset-react": "7.10.1",
    "@changesets/cli": "2.8.0",
    "@maiertech/eslint-config": "0.11.0",
    "@maiertech/prettier-config": "0.1.1",
    "eslint": "6.8.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.6",
    "microbundle": "0.12.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5"
  }
}
