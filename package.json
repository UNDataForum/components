{
  "private": true,
  "scripts": {
    "start": "yarn workspace @undataforum/components start",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-plugin-shopify": "^30.0.1",
    "husky": "^3.0.1",
    "lerna": "^3.16.0",
    "lint-staged": "^9.2.0",
    "now": "^15.8.4",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  }
}
