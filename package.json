{
  "name": "@undataforum/components",
  "description": "React components for UN World Data Forum websites.",
  "version": "0.26.0",
  "author": {
    "name": "Thilo Maier",
    "email": "maier@un.org"
  },
  "homepage": "https://components.undataforum.org",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "gatsby develop",
    "build": "gatsby build",
    "babel": "rm -rf ./dist && babel ./src -d ./dist",
    "deploy": "npm run build &&  gh-pages -d public -m 'Deploy to GitHub Pages'",
    "lint": "eslint --ext .js,.jsx,.html --ignore-path .gitignore .",
    "fix": "eslint --ext .js,.jsx,.html --ignore-path .gitignore --fix .",
    "inspect": "node --inspect-brk node_modules/.bin/gatsby develop",
    "prepublishOnly": "npm run babel"
  },
  "lint-staged": {
    "*.{js,jsx,html}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/undataforum/components.git"
  },
  "keywords": [
    "react",
    "components",
    "styled-components",
    "styled-system"
  ],
  "dependencies": {
    "prism-react-renderer": "^0.1.6",
    "prop-types": "^15.7.2",
    "react-helmet": "^5.2.0",
    "rebass": "^3.0.1",
    "styled-system": "^4.0.4"
  },
  "peerDependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "babel-eslint": "^9.0.0",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-preset-gatsby": "^0.1.9",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-wesbos": "^0.0.19",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "gatsby": "^2.1.30",
    "gatsby-theme-undataforum": "^0.1.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.0.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "styled-components": "^4.2.0"
  }
}
