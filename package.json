{
  "private": true,
  "scripts": {
    "start": "yarn workspace docs run start",
    "prepare": "yarn workspaces run prepare",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge",
    "release": "yarn changeset publish && git push --follow-tags"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/preset-env": "7.8.4",
    "@babel/preset-react": "7.8.3",
    "@changesets/changelog-github": "0.2.1",
    "@changesets/cli": "2.5.1",
    "eslint": "6.8.0",
    "eslint-plugin-shopify": "34.0.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.7",
    "microbundle": "0.11.0",
    "now": "17.0.3",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1"
  }
}
