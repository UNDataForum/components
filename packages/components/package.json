{
  "name": "@undataforum/components",
  "description": "React components for United Nations World Data Forum websites.",
  "version": "0.67.0",
  "author": "Thilo Maier <maier@un.org>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "homepage": "https://github.com/UNDataForum/design-system/tree/master/packages/components",
  "repository": {
    "type": "git",
    "url": "https://github.com/undataforum/design-system.git",
    "directory": "packages/components"
  },
  "keywords": [
    "react",
    "components",
    "theme-ui"
  ],
  "scripts": {
    "develop": "start-storybook -p 8000 -s ./static -c ./config/storybook",
    "build-storybook": "rm -rf ../../public && build-storybook -s ./static -c ./config/storybook -o ../../public",
    "prepare": "rm -rf ./dist && microbundle --no-compress --jsx React.createElement",
    "watch": "microbundle watch --no-compress --jsx React.createElement",
    "purge": "rm -rf ./node_modules"
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "theme-ui": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@storybook/addon-a11y": "5.3.7",
    "@storybook/addon-knobs": "5.3.7",
    "@storybook/addon-storysource": "5.3.7",
    "@storybook/react": "5.3.7",
    "@undataforum/preset": "0.1.2",
    "babel-loader": "8.0.6",
    "deepmerge": "4.2.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "theme-ui": "^0.3.1"
  },
  "publishConfig": {
    "access": "public"
  }
