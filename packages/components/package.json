{
  "name": "@undataforum/components",
  "description": "React components for United Nations World Data Forum websites.",
  "version": "0.47.1",
  "author": {
    "name": "Thilo Maier",
    "email": "maier@un.org"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/UNDataForum/design-system/tree/master/packages/components",
  "repository": {
    "type": "git",
    "url": "https://github.com/UNDataForum/design-system.git",
    "directory": "packages/components"
  },
  "keywords": [
    "react",
    "components",
    "theme-ui"
  ],
  "scripts": {
    "develop": "start-storybook -p 8000 -s ./static",
    "build": "rm -rf ../../public && build-storybook -s ./static -o ../../public",
    "serve": "yarn run build && serve ../../public",
    "babel": "rm -rf ./dist && cross-env NODE_ENV=production babel ./src -d ./dist --ignore 'src/**/*.stories.js'",
    "prepublishOnly": "yarn run babel",
    "purge": "rm -rf ./node_modules"
  },
  "dependencies": {
    "@emotion/core": "^10.0.21",
    "@mdx-js/react": "^1.5.1",
    "@theme-ui/components": "^0.2.45",
    "@theme-ui/preset-base": "^0.2.44",
    "deepmerge": "^4.2.2",
    "prop-types": "^15.7.2",
    "theme-ui": "^0.2.44"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/cli": "7.6.4",
    "@babel/core": "7.6.4",
    "@babel/preset-env": "7.6.3",
    "@babel/preset-react": "7.6.3",
    "@storybook/addon-a11y": "5.2.5",
    "@storybook/addon-knobs": "5.2.5",
    "@storybook/addon-storysource": "5.2.5",
    "@storybook/react": "5.2.5",
    "babel-loader": "8.0.6",
    "cross-env": "6.0.3",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "serve": "11.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
